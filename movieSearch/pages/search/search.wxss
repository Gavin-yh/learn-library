/* pages/search/search.wxss */
.search-input{
  flex: 1;
  font-size:28rpx;
  color:#4a4a4a;
}
.search-cancel{
  width:60rpx;
  height:50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
}
.movie-wrapper{
  border-bottom:1rpx solid #e9e9e9;
  position:relative;
}
.movie-content{
  background:#fff;
}
.poster{
  width:20%;
  height:200rpx;
}
.total{
  position:absolute;
  left:25%;
  top:50rpx;
}
.total .title{
  font-size:16px;
  font-weight: bold;
}
.total .desc{
  position:absolute;
  left:0;
  top:70rpx;
  width:1000rpx;
  color:#d9d9d9;
}


